    {
      "method": "DELETE",
      "path": "/articles/:slug/favorite",
      "description": "Unfavorite an article",
      "authentication_required": true,
      "path_params": {
        "slug": "string"
      },
      "response": {
        "article": {
          "slug": "string",
          "title": "string",
          "description": "string",
          "body": "string",
          "tagList": ["string"],
          "createdAt": "ISO 8601 date",
          "updatedAt": "ISO 8601 date",
          "favorited": "boolean",
          "favoritesCount": "number",
          "author": {
            "username": "string",
