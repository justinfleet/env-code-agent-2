{
  "api_name": "RealWorld Conduit API",
  "description": "A Medium.com clone - blogging platform with articles, comments, user profiles, and favorites",
  "base_path": "/api",
  "authentication": {
    "type": "JWT",
    "header": "Authorization: Token <jwt>"
  },
  "endpoints": [
    {
      "method": "POST",
      "path": "/users/login",
      "description": "Login for existing user",
      "authentication_required": false,
      "request_body": {
        "user": {
          "email": "string",
          "password": "string"
        }
      },
      "response": {
        "user": {
          "email": "string",
          "token": "string",
          "username": "string",
          "bio": "string",
          "image": "string"
        }
      }
    },
    {
      "method": "POST",
      "path": "/users",
      "description": "Register a new user",
      "authentication_required": false,
      "request_body": {
        "user": {
          "username": "string",
          "email": "string",
          "password": "string"
        }
      },
      "response": {
        "user": {
          "email": "string",
          "token": "string",
          "username": "string",
          "bio": "string",
          "image": "string"
        }
      }
    },
    {
      "method": "GET",
      "path": "/user",
      "description": "Get current user",
      "authentication_required": true,
      "response": {
        "user": {
          "email": "string",
          "token": "string",
          "username": "string",
          "bio": "string",
          "image": "string"
        }
      }
    },
    {
      "method": "PUT",
      "path": "/user",
      "description": "Update current user",
      "authentication_required": true,
      "request_body": {
        "user": {
          "email": "string (optional)",
          "username": "string (optional)",
          "bio": "string (optional)",
          "image": "string (optional)"
        }
      },
      "response": {
        "user": {
          "email": "string",
          "token": "string",
          "username": "string",
          "bio": "string",
          "image": "string"
        }
      }
    },
    {
      "method": "GET",
      "path": "/profiles/:username",
      "description": "Get a profile",
      "authentication_required": false,
      "path_params": {
        "username": "string - username of the profile to get"
      },
      "response": {
        "profile": {
          "username": "string",
          "bio": "string",
          "image": "string",
          "following": "boolean"
        }
      }
    },
    {
      "method": "POST",
      "path": "/profiles/:username/follow",
      "description": "Follow a user",
      "authentication_required": true,
      "path_params": {
        "username": "string"
      },
      "response": {
        "profile": {
          "username": "string",
          "bio": "string",
          "image": "string",
          "following": "boolean"
        }
      }
    },
    {
      "method": "DELETE",
      "path": "/profiles/:username/follow",
      "description": "Unfollow a user",
      "authentication_required": true,
      "path_params": {
        "username": "string"
      },
      "response": {
        "profile": {
          "username": "string",
          "bio": "string",
          "image": "string",
          "following": "boolean"
        }
      }
    },
    {
      "method": "GET",
      "path": "/articles",
      "description": "List articles (can be filtered by tag, author, or favorited by user)",
      "authentication_required": false,
      "query_params": {
        "tag": "string (optional) - filter by tag",
        "author": "string (optional) - filter by author username",
        "favorited": "string (optional) - filter by user who favorited",
        "limit": "number (optional, default 20)",
        "offset": "number (optional, default 0)"
      },
      "response": {
        "articles": [
          {
            "slug": "string",
            "title": "string",
            "description": "string",
            "body": "string",
            "tagList": ["string"],
            "createdAt": "ISO 8601 date",
            "updatedAt": "ISO 8601 date",
            "favorited": "boolean",
            "favoritesCount": "number",
            "author": {
              "username": "string",
              "bio": "string",
              "image": "string",
              "following": "boolean"
            }
          }
        ],
        "articlesCount": "number"
      }
    },
    {
      "method": "GET",
      "path": "/articles/feed",
      "description": "Feed of articles from users you follow",
      "authentication_required": true,
      "query_params": {
        "limit": "number (optional, default 20)",
        "offset": "number (optional, default 0)"
      },
      "response": {
        "articles": [
          {
            "slug": "string",
            "title": "string",
            "description": "string",
            "body": "string",
            "tagList": ["string"],
            "createdAt": "ISO 8601 date",
            "updatedAt": "ISO 8601 date",
            "favorited": "boolean",
            "favoritesCount": "number",
            "author": {
              "username": "string",
              "bio": "string",
              "image": "string",
              "following": "boolean"
            }
          }
        ],
        "articlesCount": "number"
      }
    },
    {
      "method": "GET",
      "path": "/articles/:slug",
      "description": "Get single article by slug",
      "authentication_required": false,
      "path_params": {
        "slug": "string - article slug"
      },
      "response": {
        "article": {
          "slug": "string",
          "title": "string",
          "description": "string",
          "body": "string",
          "tagList": ["string"],
          "createdAt": "ISO 8601 date",
          "updatedAt": "ISO 8601 date",
          "favorited": "boolean",
          "favoritesCount": "number",
          "author": {
            "username": "string",
            "bio": "string",
            "image": "string",
            "following": "boolean"
          }
        }
      }
    },
    {
      "method": "POST",
      "path": "/articles",
      "description": "Create article",
      "authentication_required": true,
      "request_body": {
        "article": {
          "title": "string",
          "description": "string",
          "body": "string",
          "tagList": ["string"]
        }
      },
      "response": {
        "article": {
          "slug": "string",
          "title": "string",
          "description": "string",
          "body": "string",
          "tagList": ["string"],
          "createdAt": "ISO 8601 date",
          "updatedAt": "ISO 8601 date",
          "favorited": "boolean",
          "favoritesCount": "number",
          "author": {
            "username": "string",
            "bio": "string",
            "image": "string",
            "following": "boolean"
          }
        }
      }
    },
    {
      "method": "PUT",
      "path": "/articles/:slug",
      "description": "Update article",
      "authentication_required": true,
      "path_params": {
        "slug": "string"
      },
      "request_body": {
        "article": {
          "title": "string (optional)",
          "description": "string (optional)",
          "body": "string (optional)"
        }
      },
      "response": {
        "article": {
          "slug": "string",
          "title": "string",
          "description": "string",
          "body": "string",
          "tagList": ["string"],
          "createdAt": "ISO 8601 date",
          "updatedAt": "ISO 8601 date",
          "favorited": "boolean",
          "favoritesCount": "number",
          "author": {
            "username": "string",
            "bio": "string",
            "image": "string",
            "following": "boolean"
          }
        }
      }
    },
    {
      "method": "DELETE",
      "path": "/articles/:slug",
      "description": "Delete article",
      "authentication_required": true,
      "path_params": {
        "slug": "string"
      },
      "response": {}
    },
    {
      "method": "POST",
      "path": "/articles/:slug/comments",
      "description": "Add comment to article",
      "authentication_required": true,
      "path_params": {
        "slug": "string"
      },
      "request_body": {
        "comment": {
          "body": "string"
        }
      },
      "response": {
        "comment": {
          "id": "number",
          "createdAt": "ISO 8601 date",
          "updatedAt": "ISO 8601 date",
          "body": "string",
          "author": {
            "username": "string",
            "bio": "string",
            "image": "string",
            "following": "boolean"
          }
        }
      }
    },
    {
      "method": "GET",
      "path": "/articles/:slug/comments",
      "description": "Get comments for article",
      "authentication_required": false,
      "path_params": {
        "slug": "string"
      },
      "response": {
        "comments": [
          {
            "id": "number",
            "createdAt": "ISO 8601 date",
            "updatedAt": "ISO 8601 date",
            "body": "string",
            "author": {
              "username": "string",
              "bio": "string",
              "image": "string",
              "following": "boolean"
            }
          }
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/articles/:slug/comments/:id",
      "description": "Delete comment",
      "authentication_required": true,
      "path_params": {
        "slug": "string",
        "id": "number - comment ID"
      },
      "response": {}
    },
    {
      "method": "POST",
      "path": "/articles/:slug/favorite",
      "description": "Favorite an article",
      "authentication_required": true,
      "path_params": {
        "slug": "string"
      },
      "response": {
        "article": {
          "slug": "string",
          "title": "string",
          "description": "string",
          "body": "string",
          "tagList": ["string"],
          "createdAt": "ISO 8601 date",
          "updatedAt": "ISO 8601 date",
          "favorited": "boolean",
          "favoritesCount": "number",
          "author": {
            "username": "string",
            "bio": "string",
            "image": "string",
            "following": "boolean"
          }
        }
