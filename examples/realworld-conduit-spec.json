          }
        }
      }
    },
    {
      "method": "GET",
      "path": "/tags",
      "description": "Get list of all tags",
      "authentication_required": false,
      "response": {
        "tags": ["string"]
      }
    }
  ],
  "data_models": {
    "User": {
      "id": "integer (primary key)",
      "username": "string (unique)",
      "email": "string (unique)",
      "password": "string (hashed)",
      "bio": "string (optional)",
      "image": "string (optional)",
      "createdAt": "datetime",
      "updatedAt": "datetime"
    },
    "Article": {
      "id": "integer (primary key)",
      "slug": "string (unique, generated from title)",
      "title": "string",
      "description": "string",
      "body": "text",
      "author_id": "integer (foreign key to User)",
      "createdAt": "datetime",
      "updatedAt": "datetime"
    },
    "Comment": {
      "id": "integer (primary key)",
      "body": "text",
      "article_id": "integer (foreign key to Article)",
      "author_id": "integer (foreign key to User)",
      "createdAt": "datetime",
      "updatedAt": "datetime"
    },
    "Tag": {
      "id": "integer (primary key)",
      "name": "string (unique)"
    },
    "ArticleTag": {
      "article_id": "integer (foreign key to Article)",
      "tag_id": "integer (foreign key to Tag)"
    },
    "Favorite": {
      "user_id": "integer (foreign key to User)",
      "article_id": "integer (foreign key to Article)",
      "createdAt": "datetime"
    },
    "Follow": {
      "follower_id": "integer (foreign key to User)",
      "following_id": "integer (foreign key to User)",
      "createdAt": "datetime"
    }
  },
  "business_logic": {
    "slug_generation": "Article slugs are generated from titles by lowercasing, replacing spaces with hyphens, and ensuring uniqueness",
    "authentication": "JWT tokens are generated on login/register and validated via Authorization header",
    "following": "Users can follow other users. The 'following' field in profiles indicates if current user follows that user",
    "favorites": "Users can favorite articles. Favorited articles appear in their favorites list and increment favoritesCount",
    "feed": "The /articles/feed endpoint returns articles from users the current user follows, ordered by most recent first",
    "tags": "Tags are created automatically when articles are created with new tag names. Tags endpoint returns all unique tags"
  }
}
